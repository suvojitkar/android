<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.github.glomadrian.codeinput.otp">
    <com.ok.ateam.login_f.CodeInput
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:underline_color="#457ad1"
        app:underline_selected_color="#9e1ace"
        app:text_color="#b12eff"
        android:gravity="center"
        app:hint_color="#77ce9d"
        app:hint_text="Pin code"
        android:id="@+id/otpview"
        app:codes="4"
        />
    <Button
        android:id="@+id/btnotp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:minWidth="100dp"
        android:gravity="center"
        android:text="Go"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="120dp"
        android:layout_alignTop="@+id/btnlogin"
        android:layout_alignEnd="@+id/TFpassword_login"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>

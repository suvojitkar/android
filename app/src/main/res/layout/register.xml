<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bgb">

    <LinearLayout
        android:layout_marginTop="190dp"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:background="@drawable/backg"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:text="Join Our Team"
            android:textSize="15sp"
            android:textColor="@color/yellow"
            android:gravity="center"/>


        <EditText
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:hint="Name"
            android:textColorHint="@color/white"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:background="@color/grey"
            android:layout_gravity="center"
            android:id="@+id/TFname_register"
            android:inputType="textPersonName"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:hint="Email-id"
            android:textColorHint="@color/white"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:background="@color/grey"
            android:layout_gravity="center"
            android:id="@+id/TFemail_register"
            android:inputType="textEmailAddress"/>


        <EditText
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:hint="Username"
            android:id="@+id/TFusername_register"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/white"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@color/grey" />



        <EditText
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:hint="Password"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/white"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:id="@+id/TFpassword_register"
            android:background="@color/grey" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:hint="Confirm Password"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/white"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:id="@+id/TFconfirm_password_register"
            android:background="@color/grey" />


        <Button
            android:layout_width="250dp"
            android:layout_marginTop="20dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@color/yellow"
            android:onClick="onRegisterClick"
            android:text="Sign up"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onLoginClick"
            android:text="Login"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/yellow"/>


</LinearLayout>
    </LinearLayout>
    </ScrollView>